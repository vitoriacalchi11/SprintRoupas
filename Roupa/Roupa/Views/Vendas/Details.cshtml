@model Roupa.Models.Venda

@{
    ViewData["Title"] = "Detalhes Venda";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.CadastroDeVendas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CadastroDeVendas.NotaVenda)
        </dd>
        <dt class = "col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class="col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.PrecoUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoUnitario)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-outline-primary m-1" asp-route-id="@Model?.VendaId">Editar</a>
    <a asp-action="Index" class="btn btn-outline-secondary m-1">Voltar</a>
</div>
