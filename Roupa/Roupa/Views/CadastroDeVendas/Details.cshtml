@model Roupa.Models.CadastroDeVendas


@{
    ViewData["Title"] = "Detalhes Cadastro";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.NotaVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NotaVenda)
        </dd>
        <dt class = "col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.DataHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataHora)
        </dd>
        <dt class = "col-sm-2 text-dark">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-outline-primary m-1" asp-route-id="@Model?.CadastroDeVendasId">Editar</a>
    <a asp-action="Index" class="btn btn-outline-secondary m-1">Voltar</a>
</div>
