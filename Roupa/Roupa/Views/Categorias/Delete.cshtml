@model Roupa.Models.Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}
<h4 class="mt-2">@ViewData["Title"]</h4>

<div class="m-5">
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <h3 class="alert alert-danger">Certeza que gostaria de deletar essa categoria?</h3>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger m-1" />
        <a class="btn btn-outline-secondary m-1" asp-action="Index">Voltar</a>
    </form>
</div>
